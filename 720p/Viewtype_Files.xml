<!--Alaska-->

<includes>
	<include name="Viewtype_Files">

		<!-- Background Diffuse -->
		
		<control type="image">
			<include>Dimensions_Fullscreen</include>
			<animation effect="fade" start="100" end="80" time="400" condition="true">Conditional</animation>
			<texture>list/maskback.png</texture>
			<visible>Control.IsVisible(55)</visible>
		</control>

		<!-- Browser -->
		<control type="fixedlist" id="55">
			<posx>-200</posx>
			<posy>90</posy>
			<height>485</height>
			<width>1680</width>
			<onup>55</onup>
			<ondown>55</ondown>
			<onleft>7000</onleft>
			<onright>60</onright>
			<scrolltime>0</scrolltime>
			<viewtype label="Files">list</viewtype>
			<orientation>vertical</orientation>
			<focusposition>3</focusposition>
			<pagecontrol>60</pagecontrol>
			<include>Animation_ZoomInZoomOut</include>
			<include>Animation_ZoomedByMenu</include>
			<include>Animation_HiddenByInfo</include>
			<include>Animation_HiddenByMusicInfo</include>
			<itemlayout width="1210" height="46">
				<control type="label">
					<posx>720</posx>
					<posy>0</posy>
					<width>680</width>
					<height>46</height>
					<aligny>center</aligny>
					<font>Font_ListTitleNF</font>
					<textcolor>FileTitleNF</textcolor>
					<label>$INFO[ListItem.TrackNumber]. $INFO[ListItem.Title] [COLOR Date]$INFO[ListItem.Duration][/COLOR]</label>
					<visible>!IsEmpty(ListItem.Duration) + !IsEmpty(ListItem.TrackNumber) + [Container.Content(songs) | Window.IsActive(500) | [Window.IsActive(502) + !Container.Content(artists) + !Container.Content(albums) + !Container.Content(songs)]]</visible>
				</control>
				<control type="label">
					<posx>720</posx>
					<posy>0</posy>
					<width>700</width>
					<height>46</height>
					<aligny>center</aligny>
					<font>Font_ListTitleNF</font>
					<textcolor>FileTitleNF</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible>![Window.IsActive(25) | Window.IsActive(502) | Window.IsActive(500)]</visible>
				</control>
				<control type="label">
					<posx>720</posx>
					<posy>0</posy>
					<width>720</width>
					<height>46</height>
					<aligny>center</aligny>
					<font>Font_ListTitleNF</font>
					<textcolor>FileTitleNF</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible>IsEmpty(ListItem.Title) + [Window.IsActive(25) | Window.IsActive(502)]</visible>
				</control>
				<control type="label">
					<posx>720</posx>
					<posy>0</posy>
					<width>680</width>
					<height>46</height>
					<aligny>center</aligny>
					<font>Font_ListTitleNF</font>
					<textcolor>FileTitleNF</textcolor>
					<label>$INFO[ListItem.Title]</label>
					<visible>!IsEmpty(ListItem.Title) + Window.IsActive(25) + !Container.Content(episodes)</visible>
				</control>
				<control type="label">
					<posx>720</posx>
					<posy>0</posy>
					<width>680</width>
					<height>46</height>
					<aligny>center</aligny>
					<font>Font_ListTitleNF</font>
					<textcolor>FileTitleNF</textcolor>
					<label>$INFO[ListItem.Episode]. $INFO[ListItem.Title]</label>
					<visible>!IsEmpty(ListItem.Title) + Window.IsActive(25) + Container.Content(episodes)</visible>
				</control>
			</itemlayout>
			<focusedlayout width="720" height="120">
				<control type="group">
					<visible>Skin.HasSetting(File_View_Focus_Line) + Control.IsVisible(55)</visible>
					<posx>0</posx>
					<posy>0</posy>
					<include>Animation_ZoomInZoomOut</include>
					<include>Animation_ZoomedByMenu</include>
					<include>Animation_HiddenByInfo</include>
					<include>Animation_HiddenByMusicInfo</include>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>1680</width>
						<height>120</height>
						<texture>common/black.png</texture>
						<colordiffuse>11000000</colordiffuse>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>1680</width>
						<height>2</height>
						<texture>common/line_1.png</texture>
						<colordiffuse>55ffffff</colordiffuse>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>120</posy>
						<width>1680</width>
						<height>2</height>
						<texture>common/line_1.png</texture>
						<colordiffuse>55ffffff</colordiffuse>
					</control>
				</control>
				<control type="image">
					<posx>230</posx>
					<posy>-118</posy>
					<width>440</width>
					<height>360</height>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<bordertexture border="8">common\thumb_border.png</bordertexture>
					<bordersize>8</bordersize>
					<include>Animation_ZoomInZoomOut</include>
					<include>Animation_ZoomedByMenu</include>
					<include>Animation_HiddenByMusicInfo</include>
					<visible>!Container.Content(Genres)</visible>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="450,75" start="50" end="100" time="200" tween="cubic" easing="out" />
						<effect type="fade" start="60" end="100" time="200" />
					</animation>
				</control>
				<control type="image">
					<posx>230</posx>
					<posy>-118</posy>
					<width>440</width>
					<height>360</height>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<texture fallback="defaultmoviegenre.jpg">extras\moviegenres\$INFO[ListItem.Label].jpg</texture>
					<bordertexture border="8">common\thumb_border.png</bordertexture>
					<bordersize>8</bordersize>
					<include>Animation_ZoomInZoomOut</include>
					<include>Animation_ZoomedByMenu</include>
					<include>Animation_HiddenByMusicInfo</include>
					<visible>Container.Content(Genres)</visible>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="450,75" start="50" end="100" time="200" tween="cubic" easing="out" />
						<effect type="fade" start="60" end="100" time="200" />
					</animation>
				</control>
				<control type="label">
					<posx>690</posx>
					<posy>0</posy>
					<width>720</width>
					<height>120</height>
					<aligny>center</aligny>
					<font>Font_ListTitleBigger</font>
					<textcolor>ListTitleF</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible>Container.Content(files) | [IsEmpty(ListItem.Title) + !Container.Content(artists) + !Container.Content(albums) + !Container.Content(songs)]</visible>
				</control>
				<control type="label">
					<posx>690</posx>
					<posy>0</posy>
					<width>720</width>
					<height>120</height>
					<aligny>center</aligny>
					<font>Font_ListTitleBigger</font>
					<textcolor>ListTitleF</textcolor>
					<label>$INFO[ListItem.Title]</label>
					<visible>!IsEmpty(ListItem.Title) + Window.IsActive(25) + !Container.Content(episodes)</visible>
				</control>
				<control type="label">
					<posx>690</posx>
					<posy>4</posy>
					<width>720</width>
					<height>25</height>
					<aligny>center</aligny>
					<font>Font_ListTitleBig</font>
					<textcolor>ListTitleF</textcolor>
					<label>$INFO[ListItem.Episode]. $INFO[ListItem.Title]</label>
					<visible>!IsEmpty(ListItem.Title) + Window.IsActive(25) + Container.Content(episodes)</visible>
					<animation effect="slide" start="0,46" end="0,46" time="0" condition="IsEmpty(ListItem.Plot)">Conditional</animation>
				</control>
				<control type="label">
					<posx>690</posx>
					<posy>20</posy>
					<width>720</width>
					<height>25</height>
					<aligny>center</aligny>
					<font>Font_ListDetail</font>
					<textcolor>ListTitleF</textcolor>
					<label>$INFO[ListItem.Genre]</label>
					<visible>!IsEmpty(ListItem.Genre) + Window.IsActive(25) + !Container.Content(seasons)</visible>
				</control>
				<control type="textbox">
					<posx>690</posx>
					<posy>30</posy>
					<width>700</width>
					<height>84</height>
					<font>Font_EpisodePlot</font>
					<textcolor>EpisodePlot</textcolor>
					<info>ListItem.Plot</info>
					<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(autoscroll)</autoscroll>
					<visible>!IsEmpty(ListItem.Plot) + Window.IsActive(25) + Container.Content(episodes)</visible>
				</control>
				<control type="image">
					<posx>690</posx>
					<posy>80</posy>
					<width>121</width>
					<height>25</height>
					<texture>$INFO[ListItem.StarRating]</texture>
					<visible>Window.IsActive(25) + ![Container.Content(seasons) | Container.Content(episodes) | Container.Content(genres)]</visible>
				</control>
				<!-- Programs -->
				<control type="group">
					<visible>Window.IsActive(1)</visible>
					<control type="label">
						<posx>690</posx>
						<posy>0</posy>
						<width>720</width>
						<height>120</height>
						<aligny>center</aligny>
						<font>Font_ListTitleBigger</font>
						<textcolor>ListTitleF</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="slide" start="0,-15" end="0,-15" time="0" condition="!IsEmpty(ListItem.Label2)">Conditional</animation>
					</control>
					<control type="label">
						<posx>690</posx>
						<posy>75</posy>
						<width>720</width>
						<height>25</height>
						<font>Font_ListTitleBig</font>
						<textcolor>ListTitleF</textcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</control>
				<!-- Music -->
				<!-- Artist -->
				<control type="group">
					<visible>Container.Content(artists)</visible>
					<control type="label">
						<posx>690</posx>
						<posy>10</posy>
						<width>720</width>
						<height>25</height>
						<aligny>center</aligny>
						<font>Font_ListTitleBig</font>
						<textcolor>ListTitleF</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="textbox">
						<posx>690</posx>
						<posy>35</posy>
						<width>720</width>
						<height>60</height>
						<font>Font_ListDetail</font>
						<textcolor>ListTitleF</textcolor>
						<label fallback="31425">$INFO[ListItem.Property(description)]</label>
					</control>
				</control>
				<!-- Album -->
				<control type="group">
					<visible>Container.Content(albums)</visible>
					<control type="label">
						<posx>690</posx>
						<posy>0</posy>
						<width>720</width>
						<height>120</height>
						<aligny>center</aligny>
						<font>Font_ListTitleBigger</font>
						<textcolor>ListTitleF</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>IsEmpty(ListItem.Album)</visible>
					</control>
					<control type="label">
						<posx>690</posx>
						<posy>0</posy>
						<width>720</width>
						<height>120</height>
						<aligny>center</aligny>
						<font>Font_ListTitleBigger</font>
						<textcolor>ListTitleF</textcolor>
						<label>$INFO[ListItem.Album]</label>
					</control>
					<control type="label">
						<posx>690</posx>
						<posy>20</posy>
						<width>720</width>
						<height>25</height>
						<aligny>center</aligny>
						<font>Font_ListDetail</font>
						<textcolor>ListTitleF</textcolor>
						<label>[B]$LOCALIZE[515]:[/B] $INFO[ListItem.Genre]</label>
						<visible>!IsEmpty(ListItem.Album)</visible>
					</control>
					<control type="image">
						<posx>690</posx>
						<posy>80</posy>
						<width>121</width>
						<height>25</height>
						<texture>$INFO[ListItem.StarRating]</texture>
						<visible>!IsEmpty(ListItem.Album)</visible>
					</control>
				</control>
				<!-- Song -->
				<control type="group">
					<visible>Container.Content(songs) | Window.IsActive(500)</visible>
					<control type="label">
						<posx>690</posx>
						<posy>0</posy>
						<width>720</width>
						<height>120</height>
						<aligny>center</aligny>
						<font>Font_ListTitleBigger</font>
						<textcolor>ListTitleF</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<posx>690</posx>
						<posy>0</posy>
						<width>720</width>
						<height>120</height>
						<aligny>center</aligny>
						<font>Font_ListTitleBigger</font>
						<textcolor>ListTitleF</textcolor>
						<label>$INFO[ListItem.TrackNumber]. $INFO[ListItem.Title]</label>
						<visible>!IsEmpty(ListItem.Title)</visible>
						<animation effect="slide" start="0,-10" end="0,-10" time="0" condition="Window.IsActive(500) | [ Window.IsActive(502) + !Container.Content(artists) + !Container.Content(albums) + !Container.Content(songs)]">Conditional</animation>
					</control>
					<control type="label">
						<posx>690</posx>
						<posy>20</posy>
						<width>720</width>
						<height>25</height>
						<aligny>center</aligny>
						<font>Font_ListDetail</font>
						<textcolor>ListTitleF</textcolor>
						<label>[B]Album:[/B] $INFO[ListItem.Album]</label>
						<visible>[Window.IsActive(500) | [ Window.IsActive(502) + !Container.Content(artists) + !Container.Content(albums) + !Container.Content(songs)]] + !IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<posx>690</posx>
						<posy>20</posy>
						<width>720</width>
						<height>25</height>
						<aligny>center</aligny>
						<font>Font_ListDetail</font>
						<textcolor>ListTitleF</textcolor>
						<label>[B]Artist:[/B] $INFO[ListItem.Artist]</label>
						<visible>!IsEmpty(ListItem.Title)</visible>
						<animation effect="slide" start="0,10" end="0,10" time="0" condition="Window.IsActive(500) | [ Window.IsActive(502) + !Container.Content(artists) + !Container.Content(albums) + !Container.Content(songs)]">Conditional</animation>
					</control>
					<control type="label">
						<posx>690</posx>
						<posy>80</posy>
						<width>720</width>
						<height>25</height>
						<aligny>center</aligny>
						<font>Font_ListDetail</font>
						<textcolor>ListTitleF</textcolor>
						<label>[B]Duration:[/B] $INFO[ListItem.Duration]</label>
						<visible>!IsEmpty(ListItem.Title)</visible>
						<animation effect="slide" start="0,10" end="0,10" time="0" condition="Window.IsActive(500) | [ Window.IsActive(502) + !Container.Content(artists) + !Container.Content(albums) + !Container.Content(songs)]">Conditional</animation>
					</control>
				</control>
			</focusedlayout>
		</control>
		
		<!-- List Diffuse -->

		<control type="image">
			<include>Dimensions_Fullscreen</include>
			<animation effect="fade" start="100" end="80" time="400" condition="true">Conditional</animation>
			<texture>list/maskfront.png</texture>
			<visible>Control.IsVisible(55)</visible>
		</control>
		
		<control type="image">
			<include>Dimensions_Fullscreen</include>
			<texture diffuse="list/list_mask_1.png">backdrops/backgroundcolordiffuse.png</texture>
			<colordiffuse>backgroundColor</colordiffuse>
			<visible>Control.IsVisible(55)</visible>
		</control>
		
		<!-- Media Flags -->
		
		<control type="group">
			<visible>Control.IsVisible(55) + Window.IsActive(25)</visible>
			<include>Animation_ZoomedByMenu</include>
			<include>PosterMediaFlags</include>
		</control>
		
		<!-- Scroll Bar -->
		
		<control type="scrollbar" id="60">
			<include>Animation_ZoomInZoomOut</include>
			<include>Animation_ZoomedByMenu</include>
			<posx>1280</posx>
			<posy>100</posy>
			<width>25</width>
			<height>460</height>
			<visible allowhiddenfocus="true">Control.IsVisible(55) + Control.HasFocus(60)</visible>
			<texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
			<textureslidernibfocus>ScrollBarV_Nib_Focus.png</textureslidernibfocus>
			<onleft>55</onleft>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
			<include>Animation_CommonFade</include>
			<animation effect="slide" start="0,0" end="-50,0" time="400" tween="cubic" easing="inout" condition="Control.HasFocus(60)">Conditional</animation>
		</control>
	</include>
</includes>